{
  "extends": "@react-native-community",
  "rules": {
    "react/react-in-jsx-scope": "off",
    // allow jsx syntax in js files (for next.js project)
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ], //should add ".ts" if typescript project
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true
      }
    ]
  }
}